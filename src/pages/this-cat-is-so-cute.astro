---
import '../styles/global.css';
import imgCuteCat from '../assets/cute-cat.jpeg';

const baseUrl = new URL(Astro.url);
const cuteCatImageUrl = new URL(imgCuteCat.src, baseUrl);

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<title>So cute! - CatSpace.net</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="mobile-web-app-capable" content="yes">
		<meta name="mobile-web-app-status-bar-style" content="black">
		<meta name="generator" content={Astro.generator} />
    <meta name="description" content="You won't believe what this cute cat is doing! Romping, playing, meowing, tired eepy, never gonna give you up" />

    <meta property="og:title" content="So cute!" />
    <meta property="og:description" content="You won't believe what this cute cat is doing!" />
    <meta property="og:image" content={cuteCatImageUrl.toString()} />
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@ddemaree">
    <meta name="twitter:creator" content="@ddemaree">
	</head>
	<body>
    <div class="bg-red w-dvw h-dvh relative">
      <video class="absolute z-99 w-full h-full object-cover" src="https://res.cloudinary.com/demaree/video/upload/ar_9:16,c_crop,g_center,h_1080/Rick_Astley_-_Never_Gonna_Give_You_Up_Official_Music_Video_oihxd9.mp4" autoplay muted loop></video>
    </div>
	</body>
</html>